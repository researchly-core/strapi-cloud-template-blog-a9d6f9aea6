{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article",
    "description": "Create your blog content"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "webtools": {
      "enabled": true
    }
  },
  "attributes": {
    "url_alias": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "plugin::webtools.url-alias",
      "writable": true,
      "configurable": false,
      "editable": false,
      "visible": true,
      "unique": true
    },
    "title": {
      "type": "string",
      "default": "recommendation: 60 characters",
      "required": true
    },
    "description": {
      "type": "text",
      "default": "give me a short summary for my blog post: Give a clear 1-3 sentence answer in simple language. Format like a featured snippet. Optional: add a relevant internal link.",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "cover": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ]
    },
    "author": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::author.author",
      "inversedBy": "articles"
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category",
      "inversedBy": "articles"
    },
    "blocks": {
      "type": "dynamiczone",
      "components": [
        "shared.media",
        "shared.quote",
        "shared.rich-text",
        "shared.slider",
        "shared.flourish-link"
      ]
    },
    "SEO": {
      "type": "component",
      "component": "shared.seo",
      "repeatable": false,
      "required": true
    },
    "authorsNote": {
      "type": "component",
      "component": "shared.authors-note",
      "repeatable": false
    },
    "FAQ": {
      "type": "component",
      "component": "shared.faq",
      "repeatable": true,
      "required": true
    },
    "language": {
      "type": "enumeration",
      "default": "de-DE",
      "enum": [
        "de-DE",
        "en-US"
      ]
    },
    "agent_cta": {
      "type": "component",
      "component": "shared.agent-cta",
      "repeatable": false
    },
    "showOnBlogSite": {
      "type": "boolean",
      "default": false
    },
    "showCTA": {
      "type": "boolean",
      "default": true
    },
    "cta_btn_top_text": {
      "type": "string",
      "default": "Kostenlos automatisieren"
    },
    "cta_btn_top_url": {
      "type": "string",
      "default": "#cta"
    }
  }
}
